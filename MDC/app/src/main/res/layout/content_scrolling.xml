<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="?attr/actionBarSize">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_min"
            android:layout_marginTop="@dimen/common_margin_min"
            android:layout_marginEnd="@dimen/common_margin_min"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@android:color/holo_blue_bright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/common_dimen_default"
                android:paddingTop="@dimen/common_dimen_default"
                android:paddingEnd="@dimen/common_dimen_default">
                <ImageView
                    android:id="@+id/imgCard"
                    android:layout_width="@dimen/img_card_dimen"
                    android:layout_height="@dimen/img_card_dimen"
                    android:src="@mipmap/ic_launcher"
                    android:contentDescription="@string/img_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBuy"
                    android:text="@string/btn_card"
                    app:icon="@drawable/ic_shop"
                    android:layout_marginTop="@dimen/common_margin_min"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSkip"
                    android:text="@string/btn_skip"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    app:layout_constraintEnd_toStartOf="@id/btnBuy"
                    app:layout_constraintBottom_toBottomOf="@id/btnBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtVTitle"
                    android:text="@string/textview_title"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    app:layout_constraintStart_toEndOf="@id/imgCard"
                    app:layout_constraintTop_toTopOf="@id/imgCard"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="@dimen/common_dimen_default"
                    android:layout_marginEnd="@dimen/common_dimen_default"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtVMensaje"
                    android:text="@string/large_text"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:maxLines="3"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/txtVTitle"
                    app:layout_constraintStart_toStartOf="@id/txtVTitle"
                    app:layout_constraintEnd_toEndOf="@id/txtVTitle"
                    app:layout_constraintBottom_toBottomOf="@id/imgCard"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_min"
            android:layout_marginTop="@dimen/common_margin_min"
            android:layout_marginEnd="@dimen/common_margin_min">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgCover"
                    android:layout_width="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:importantForAccessibility="no"
                    android:background="@color/design_default_color_secondary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="@dimen/common_img_cover_height"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/txtVTitleAlt"
                    android:text="@string/textview_title"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:layout_margin="@dimen/common_dimen_default"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgCover"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilUrl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/image_url_hint"
                    app:helperText="@string/card_required"
                    app:endIconMode="clear_text"
                    android:layout_marginTop="@dimen/common_dimen_default"
                    app:layout_constraintTop_toBottomOf="@id/txtVTitleAlt"
                    app:layout_constraintEnd_toEndOf="@id/txtVTitleAlt"
                    app:layout_constraintStart_toStartOf="@id/txtVTitleAlt"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTUrl"
                        android:inputType="textUri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    android:hint="@string/card_password"
                    android:layout_marginTop="@dimen/common_dimen_default"
                    app:endIconMode="password_toggle"
                    android:enabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tilUrl"
                    app:layout_constraintStart_toStartOf="@id/txtVTitleAlt"
                    app:layout_constraintEnd_toEndOf="@id/txtVTitleAlt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTPassword"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkBPasswordEnable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_dimen_default"
                    android:text="@string/card_enable_password"
                    app:layout_constraintStart_toStartOf="@id/txtVTitleAlt"
                    app:layout_constraintTop_toBottomOf="@id/tilPassword"/>
                <View
                    android:id="@+id/divider"
                    app:layout_constraintStart_toStartOf="@id/txtVTitleAlt"
                    app:layout_constraintEnd_toEndOf="@id/txtVTitleAlt"
                    app:layout_constraintTop_toBottomOf="@id/checkBPasswordEnable"
                    android:layout_marginTop="@dimen/common_dimen_middle"
                    android:background="@color/color_divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/txtVSubtitle"
                    android:text="@string/textview_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_marginTop="@dimen/common_dimen_middle"
                    app:layout_constraintStart_toStartOf="@id/txtVTitleAlt"
                    app:layout_constraintEnd_toEndOf="@id/txtVTitleAlt"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtVMessage"
                    android:text="@string/large_text"
                    android:maxLines="5"
                    android:ellipsize="end"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_marginTop="@dimen/common_dimen_default"
                    android:layout_marginBottom="@dimen/common_dimen_default"
                    app:layout_constraintStart_toStartOf="@id/txtVTitleAlt"
                    app:layout_constraintEnd_toEndOf="@id/txtVTitleAlt"
                    app:layout_constraintTop_toBottomOf="@id/txtVSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toogle_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtVMessage"
                    android:layout_marginTop="@dimen/common_dimen_default">

                    <Button
                        android:id="@+id/btnRed"
                        android:text="@string/btn_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/materialButtonOutlinedStyle"/>
                    <Button
                        android:id="@+id/btnBlue"
                        android:text="@string/btn_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/materialButtonOutlinedStyle"/>
                    <Button
                        android:id="@+id/btnGreen"
                        android:text="@string/btn_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?attr/materialButtonOutlinedStyle"/>
                </com.google.android.material.button.MaterialButtonToggleGroup>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMorir"
                    android:text="@string/btn_skip"
                    app:layout_constraintEnd_toEndOf="@id/txtVTitleAlt"
                    app:layout_constraintTop_toBottomOf="@id/toogle_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>